<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
    <br>
    <div class="jumbotron">
    <!-- the div class below doesn't matter -->
      <div id="proImage" class="col-md-4"><%= image_tag @user.images, id:"profile_pic" %></div>

      <div class="container">
        <div class="user-info">
          <h3>Name:</h3><div><%= @user.name %></div>
          <br>
          <h3>Email:</h3><div><%= @user.email %></div>
          <br>
          <h3>Destroy?:</h3><button id="destroy-user" class="btn btn-sm btn-danger"><%= link_to "delete", @user, method: :delete,
                                        data: { confirm: "You sure?" } %></button>
        </div>
      </div>
    </div>



    </section>
  </aside>
</div>

