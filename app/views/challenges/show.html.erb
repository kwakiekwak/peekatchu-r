
<%= image_tag @challenge.images, height: 150, width: 150 %>
<br>
<br>
<br>
<%= @challenge.category.name %><br>

<%= @challenge.title %> <br>
<!-- make the description into a box -->
<%= @challenge.description %><br><br>
<!-- editing challenge should go here or at _challenge -->
<button><%= link_to "Edit Challenge", edit_challenge_path %></button><br>
<br>
<br>

<div class="row">

  <br>
  <div id="star" class="small-2 large-4 columns" >
    <% if current_user %>
      <br>
      <strong>Challenge Rating:</strong> <br> <%= rating_for @challenge, "challenge_rating", disable_after_rate: true, imdb_avg: true, enable_show: true %><br>
    <% end %>
  </div>
</div>
<br>
<br>
<br>

<%= form_for @post do |f| %>
<div>
<%= f.label :comments %>
<%= f.text_area :comments %>
</div>
<div>
<%= f.hidden_field :challenge_id, :value => @challenge.id %>
</div>
<div>
<%= f.hidden_field :user_id, :value => current_user.id %>
</div>
<%= f.submit %>
<% end %>

<div class="comment1">
<%= render :partial => 'post', :collection => @challenge.posts %>
</div>

