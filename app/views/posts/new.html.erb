
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@post) do |f| %>

      <%= f.label :comments %>
      <%= f.text_field :comments, class: 'form-control' %>

      <%= f.label :images %>
      <%= f.text_field :images, class: 'form-control' %>

      <%= f.hidden_field :challenge_id, :value => @id %>

      <%= f.submit "Create a post", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
